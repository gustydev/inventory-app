extends layout 

block content 
    h2=title 
    form(method="POST")
        label(for="name") Name:
        input#name(type="text" name='name' placeholder='category name' required value=(category === undefined ? '' : category.name))  
        label(for="description") Description:
        input#description(type='text' name='description' placeholder='category description' value=(!category ? '' : category.description))

        if category !== undefined
            label(for='password') Secret password: 
            input#password(type='password' name='password' required)
        
        button(type='submit') Submit
    if errors 
        ul
            for error in errors 
                li!= error.msg
